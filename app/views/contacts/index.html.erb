<!-- app/views/contacts/index.html.erb -->
<h1 class="mt-5">Contacts</h1>

<div class="mb-3">
  <%= link_to 'New Contact', new_contact_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @contacts, theme: 'bootstrap-4' %>

